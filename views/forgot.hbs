    <body>
        {{>header}}
         <h1 id="check" style="display: none;">{{in}}</h1>
 
  <section class="vh-30" style="background-color: #9A616D;">
  <div class="container py-4 h-70"  id="grow">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-10 ">
        <div   style="border-radius: 1rem;">
          <div class="row g-0">
            
            <div class="col-md-6 col-lg-7 d-flex align-items-center" style="margin: auto;">
              <div class=" card card-body p-4 p-lg-5 text-black" >

                <form action="/forgot"  method="post">

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Forgot</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <div class="form-outline mb-4">
                    <input type="text" name="email2" id="email_1" class="form-control form-control-lg" required value="{{emailexist}}" pattern="^[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$">  
                    <label class="form-label" for="email_1">Email address</label><br>
                    <span style="color:red">{{user}}</span>
                  </div>

                  <div class="form-outline mb-4" >
                    <div>
                    <input type="password" name="security1" id="sec" required class="form-control form-control-lg" >
                    <label class="form-label" for="sec">Security Pin</label>
                    </div>
                     <h1 >{{exist}}</h1>
                    <div>
                    <input type="password" name="password2" id="pass_1" class="form-control form-control-lg" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,100}$">
                    <label class="form-label" for="pass_1">New Password</label>
                    </div>
                    
                  </div>
                  
                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Submit</button>
                  </div>

                  <a href="#!" class="small text-muted">Terms of use.</a>
                  <a href="#!" class="small text-muted">Privacy policy</a>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
        <div class="container" style="display: none;" >
  <h2>Modal Example</h2>
  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" id="click">Open Modal</button>
  <!-- Modal -->
</div>
  <div class="modal fade " id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
         
          <h4 class="modal-title">Change</h4> <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <p>You Password is changed</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal" id="direct">OK</button>
        </div>
      </div>
      
    </div>
  </div>
  <a  href="/" id="show" style="display:none">hi</a>

